{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/app/*"],
      "@types": ["src/app/types/index.ts"],
      "@types/*": ["src/app/types/*"],
      "@constants": ["src/app/constants/index.ts"],
      "@constants/*": ["src/app/constants/*"],
      "@common/*": ["src/app/common/*"],
      "@services/*": ["src/app/services/*"],
      "@spartan-ng/helm/button": ["./src/libs/ui/ui-button-helm/src/index.ts"],
      "@spartan-ng/helm/utils": ["./src/libs/ui/ui-utils-helm/src/index.ts"],
      "@spartan-ng/helm/dialog": ["./src/libs/ui/ui-dialog-helm/src/index.ts"],
      "@spartan-ng/helm/select": ["./src/libs/ui/ui-select-helm/src/index.ts"],
      "@spartan-ng/helm/icon": ["./src/libs/ui/ui-icon-helm/src/index.ts"],
      "@spartan-ng/helm/form-field": ["./src/libs/ui/ui-form-field-helm/src/index.ts"],
      "@spartan-ng/helm/avatar": ["./src/libs/ui/ui-avatar-helm/src/index.ts"],
      "@spartan-ng/helm/input": ["./src/libs/ui/ui-input-helm/src/index.ts"],
      "@spartan-ng/helm/card": ["./src/libs/ui/ui-card-helm/src/index.ts"],
      "@spartan-ng/helm/sonner": ["./src/libs/ui/ui-sonner-helm/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
